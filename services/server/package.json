{
  "name": "backend",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "rm -R -f ./dist && npx prisma generate && tsc && tsc-alias",
    "start": "prisma migrate deploy && node --import ./dist/server/src/instrument.js ./dist/server/src/index.js",
    "dev": "npm run dev:migrate && tsx watch ./src/index.ts",
    "dev:update": "npx tsc --emitDeclarationOnly && npx tsc-alias",
    "dev:migrate": "prisma migrate dev",
    "dev:seed": "npx prisma db seed",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject ./dist && sentry-cli sourcemaps upload ./dist"
  },
  "dependencies": {
    "@prisma/client": "^6.0.1",
    "@sentry/cli": "^2.39.1",
    "@sentry/node": "^8.45.1",
    "@sentry/profiling-node": "^8.45.1",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^3.1.0",
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.1",
    "eslint-plugin-security": "^3.0.1",
    "prisma": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
