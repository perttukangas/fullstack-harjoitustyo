{
  "name": "backend",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "prisma migrate deploy && node --import ./dist/instrument.js ./dist/index.js",
    "dev": "npm run dev:migrate && tsx watch ./src/index.ts",
    "dev:migrate": "prisma migrate dev && npx @snaplet/seed sync",
    "dev:seed": "npx prisma db seed",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier:check": "prettier --check '**.{ts,tsx,js,jsx,mjs,md,json,prisma}'",
    "prettier:fix": "prettier --write '**.{ts,tsx,js,jsx,mjs,md,json,prisma}'"
  },
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "@sentry/node": "^8.38.0",
    "@sentry/profiling-node": "^8.38.0",
    "@trpc/client": "^11.0.0-rc.608",
    "@trpc/server": "^11.0.0-rc.608",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^3.0.8",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@snaplet/copycat": "^5.1.0",
    "@snaplet/seed": "^0.98.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.8.7",
    "eslint": "^9.13.0",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^5.21.1",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  },
  "prisma": {
    "seed": "tsx prisma/seed/seed.ts"
  },
  "@snaplet/seed": {
    "config": "prisma/seed/seed.config.ts"
  },
  "lint-staged": {
    "**.{ts,tsx,js,jsx,mjs,md,json,prisma}": [
      "prettier --write"
    ]
  }
}
